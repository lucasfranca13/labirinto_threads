<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.labirintothreads.LabirintoController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <GridPane fx:id="gradeLabirinto" gridLinesVisible="true">
    </GridPane>

    <Label fx:id="lblMensagem" text="Clique em 'Iniciar' para começar a busca!" />

    <Button fx:id="btnIniciar" text="Iniciar Simulação" onAction="#iniciarSimulacao"/>

</VBox>
